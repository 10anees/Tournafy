<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Widget Style -->
    <style name="Widget.Tournafy" parent="android:Widget"/>

    <style name="KeypadButtonStyle" parent="Widget.Material3.Button.TonalButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="KeypadButtonStyle.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
    </style>

    <style name="KeypadButtonStyle.Extra" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
    </style>

    <style name="KeypadButtonStyle.Wicket" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">?attr/colorError</item>
        <item name="android:textColor">?attr/colorOnError</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
    </style>

    <style name="BallCircleStyle">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_circle</item>
        <item name="android:backgroundTint">?attr/colorSurfaceVariant</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BallCircleStyle.Wicket" parent="BallCircleStyle">
        <item name="android:backgroundTint">?attr/colorError</item>
        <item name="android:textColor">?attr/colorOnError</item>
    </style>

    <style name="BallCircleStyle.Boundary" parent="BallCircleStyle">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.Tournafy.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/elevation_sm</item>
        <item name="contentPadding">@dimen/card_padding</item>
        <item name="cardBackgroundColor">?attr/colorSurfaceContainer</item>
    </style>
    
    <style name="Widget.Tournafy.Card.Filled" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="contentPadding">@dimen/card_padding</item>
        <item name="cardBackgroundColor">?attr/colorSurfaceContainerHighest</item>
    </style>
    
    <style name="Widget.Tournafy.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="contentPadding">@dimen/card_padding</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.Tournafy.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
    </style>
    
    <style name="Widget.Tournafy.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>
    
    <style name="Widget.Tournafy.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="strokeColor">?attr/colorOutline</item>
    </style>
    
    <style name="Widget.Tournafy.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <!-- FAB Styles -->
    <style name="Widget.Tournafy.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Large</item>
    </style>
    
    <style name="Widget.Tournafy.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Large</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.Tournafy.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipCornerRadius">8dp</item>
        <item name="chipBackgroundColor">?attr/colorSurfaceVariant</item>
    </style>
    
    <style name="Widget.Tournafy.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">8dp</item>
    </style>

    <!-- Text Input Layout -->
    <style name="Widget.Tournafy.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/button_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/button_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/button_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/button_corner_radius</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
    </style>
    
    <style name="Widget.Tournafy.TextInputLayout.Outlined" parent="Widget.Tournafy.TextInputLayout">
    </style>
    
    <style name="Widget.Tournafy.TextInputLayout.Filled" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">@dimen/button_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/button_corner_radius</item>
    </style>

    <!-- Bottom Sheet Style -->
    <style name="Widget.Tournafy.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearance">@style/ShapeAppearance.Tournafy.BottomSheet</item>
        <item name="backgroundTint">?attr/colorSurfaceContainer</item>
    </style>
    
    <style name="ShapeAppearance.Tournafy.BottomSheet" parent="ShapeAppearance.Material3.Corner.ExtraLarge">
        <item name="cornerSizeTopLeft">28dp</item>
        <item name="cornerSizeTopRight">28dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Dialog Style -->
    <style name="ThemeOverlay.Tournafy.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
    </style>

    <!-- Navigation Rail -->
    <style name="Widget.Tournafy.NavigationRail" parent="Widget.Material3.NavigationRailView">
        <item name="itemIconTint">@color/bottom_nav_item_tint</item>
        <item name="itemTextColor">@color/bottom_nav_item_tint</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.Tournafy.NavigationRail.ActiveIndicator</item>
    </style>
    
    <style name="Widget.Tournafy.NavigationRail.ActiveIndicator" parent="Widget.Material3.NavigationRailView.ActiveIndicator">
        <item name="android:color">?attr/colorSecondaryContainer</item>
    </style>

    <!-- Top App Bar -->
    <style name="Widget.Tournafy.TopAppBar" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
    </style>
    
    <style name="Widget.Tournafy.TopAppBar.Large" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <!-- List Item Styles -->
    <style name="Widget.Tournafy.ListItem">
        <item name="android:minHeight">@dimen/list_item_height</item>
        <item name="android:paddingStart">@dimen/spacing_md</item>
        <item name="android:paddingEnd">@dimen/spacing_md</item>
        <item name="android:paddingTop">@dimen/spacing_sm</item>
        <item name="android:paddingBottom">@dimen/spacing_sm</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Badge Style -->
    <style name="Widget.Tournafy.Badge" parent="Widget.Material3.Badge">
        <item name="backgroundColor">?attr/colorError</item>
        <item name="badgeTextColor">?attr/colorOnError</item>
    </style>

    <!-- Divider -->
    <style name="Widget.Tournafy.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">?attr/colorOutlineVariant</item>
    </style>

    <!-- Status Chip Styles -->
    <style name="Widget.Tournafy.StatusChip">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">@dimen/text_size_label_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="Widget.Tournafy.StatusChip.Live">
        <item name="android:background">@drawable/bg_status_live</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="Widget.Tournafy.StatusChip.Scheduled">
        <item name="android:background">@drawable/bg_status_scheduled</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="Widget.Tournafy.StatusChip.Completed">
        <item name="android:background">@drawable/bg_status_completed</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Score Display -->
    <style name="Widget.Tournafy.ScoreText">
        <item name="android:textSize">@dimen/score_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    
    <style name="Widget.Tournafy.TeamNameText">
        <item name="android:textSize">@dimen/team_name_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Empty State -->
    <style name="Widget.Tournafy.EmptyState">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacing_xl</item>
    </style>
    
    <style name="Widget.Tournafy.EmptyState.Icon">
        <item name="android:layout_width">@dimen/icon_size_xxl</item>
        <item name="android:layout_height">@dimen/icon_size_xxl</item>
        <item name="tint">?attr/colorOnSurfaceVariant</item>
        <item name="android:alpha">0.6</item>
    </style>
    
    <style name="Widget.Tournafy.EmptyState.Text">
        <item name="android:textSize">@dimen/text_size_body_large</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:alpha">0.6</item>
        <item name="android:gravity">center</item>
    </style>

</resources>