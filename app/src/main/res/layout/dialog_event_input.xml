<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Event"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Team"
        android:textAppearance="?attr/textAppearanceBodyMedium"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:singleSelection="true"
        app:selectionRequired="true">
        <com.google.android.material.chip.Chip
            android:id="@+id/chipTeamA"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team A"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chipTeamB"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team B"/>
    </com.google.android.material.chip.ChipGroup>

    <!-- Player label to show context -->
    <TextView
        android:id="@+id/tvPlayerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:hint="Select Player">

        <AutoCompleteTextView
            android:id="@+id/actvPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Assister Selection (shown for goals only - optional) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilAssister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:hint="Assister (Optional)"
        app:helperText="Who provided the assist?"
        app:helperTextEnabled="true"
        android:visibility="gone">

        <AutoCompleteTextView
            android:id="@+id/actvAssister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Goal Type Selection (shown for goals only) -->
    <TextView
        android:id="@+id/tvGoalTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal Type"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupGoalType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:singleSelection="true">
        <com.google.android.material.chip.Chip
            android:id="@+id/chipOpenPlay"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Play"
            android:checked="true"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chipPenalty"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penalty"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chipFreeKick"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free Kick"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chipHeader"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Header"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chipOwnGoal"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Own Goal"/>
    </com.google.android.material.chip.ChipGroup>

    <!-- Card Type Selection (shown for cards only) -->
    <TextView
        android:id="@+id/tvCardTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Type"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupCardType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:singleSelection="true"
        app:selectionRequired="true">
        <com.google.android.material.chip.Chip
            android:id="@+id/chipYellow"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŸ¨ Yellow Card"
            android:textColor="#F9A825"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chipRed"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŸ¥ Red Card"
            android:textColor="#C62828"/>
    </com.google.android.material.chip.ChipGroup>

    <!-- Player In Selection (shown for substitutions only) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPlayerIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:hint="Substitute Coming In"
        app:helperText="Player replacing the selected player"
        app:helperTextEnabled="true"
        android:visibility="gone">

        <AutoCompleteTextView
            android:id="@+id/actvPlayerIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Event"
        android:layout_marginTop="24dp"/>

</LinearLayout>