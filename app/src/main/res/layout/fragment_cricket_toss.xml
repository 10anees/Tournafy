<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tvTossTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toss"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Toss Winner Section -->
    <TextView
        android:id="@+id/tvTossWinnerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who won the toss?"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvTossTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupTossWinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:selectionRequired="false"
        app:layout_constraintTop_toBottomOf="@id/tvTossWinnerLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTeamA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Chip.Filter"
            android:text="Team A"
            android:checkable="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTeamB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Chip.Filter"
            android:text="Team B"
            android:checkable="true" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Toss Decision Section -->
    <TextView
        android:id="@+id/tvTossDecisionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What did they choose?"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/chipGroupTossWinner"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupTossDecision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:selectionRequired="false"
        app:layout_constraintTop_toBottomOf="@id/tvTossDecisionLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        tools:visibility="visible">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipBat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Chip.Filter"
            android:text="Bat"
            android:checkable="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipBowl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Chip.Filter"
            android:text="Bowl"
            android:checkable="true" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Continue Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinueToLiveScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue to Live Score"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
