<?xml version="1.0" encoding="utf-8"?>
<!-- Custom Over Progress View for Cricket - Shows ball-by-ball progress -->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_md"
    android:background="?attr/colorSurfaceContainer">

    <!-- Over Number -->
    <TextView
        android:id="@+id/tvOverNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        tools:text="Over 18"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Over Runs -->
    <TextView
        android:id="@+id/tvOverRuns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceLabelMedium"
        android:textColor="?attr/colorPrimary"
        tools:text="12 runs"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Ball Progress Container -->
    <LinearLayout
        android:id="@+id/containerBalls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_sm"
        android:orientation="horizontal"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/tvOverNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Ball 1 -->
        <TextView
            android:id="@+id/ball1"
            style="@style/BallCircleStyle"
            tools:text="1"
            tools:backgroundTint="?attr/colorPrimary"/>

        <!-- Ball 2 -->
        <TextView
            android:id="@+id/ball2"
            style="@style/BallCircleStyle"
            tools:text="0"/>

        <!-- Ball 3 -->
        <TextView
            android:id="@+id/ball3"
            style="@style/BallCircleStyle"
            tools:text="4"/>

        <!-- Ball 4 -->
        <TextView
            android:id="@+id/ball4"
            style="@style/BallCircleStyle"
            tools:text="6"/>

        <!-- Ball 5 -->
        <TextView
            android:id="@+id/ball5"
            style="@style/BallCircleStyle"
            tools:text="W"/>

        <!-- Ball 6 -->
        <TextView
            android:id="@+id/ball6"
            style="@style/BallCircleStyle"
            tools:text="1"/>
    </LinearLayout>

    <!-- Bowler Info -->
    <LinearLayout
        android:id="@+id/containerBowlerInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_sm"
        android:orientation="horizontal"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/containerBalls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bowler: "
            android:textAppearance="?attr/textAppearanceLabelSmall"
            android:textColor="?attr/colorOnSurfaceVariant"/>

        <TextView
            android:id="@+id/tvBowlerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            tools:text="John Smith"/>

        <TextView
            android:id="@+id/tvBowlerStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceLabelSmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="3-0-24-1"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/spacing_sm"
        android:background="?attr/colorOutlineVariant"
        app:layout_constraintTop_toBottomOf="@id/containerBowlerInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
