<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <com.example.tournafy.ui.components.ScoreboardView
        android:id="@+id/scoreboardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCurrentAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/scoreboardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvStriker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Striker *"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvNonStriker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Non-Striker"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvBowler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bowler"
                android:gravity="end"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    
    <TextView
        android:id="@+id/tvThisOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This Over:"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardCurrentAction"/>

    <LinearLayout
        android:id="@+id/llRecentBalls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tvThisOver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvThisOver"
        app:layout_constraintBottom_toBottomOf="@id/tvThisOver">
        <TextView android:text="." style="@style/BallCircleStyle"/>
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridKeypad"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:columnCount="4"
        android:rowCount="5"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/llRecentBalls"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button android:id="@+id/btnZero"  android:text="0" style="@style/KeypadButtonStyle"/>
        <Button android:id="@+id/btnOne"   android:text="1" style="@style/KeypadButtonStyle"/>
        <Button android:id="@+id/btnTwo"   android:text="2" style="@style/KeypadButtonStyle"/>
        <Button android:id="@+id/btnThree" android:text="3" style="@style/KeypadButtonStyle"/>

        <Button android:id="@+id/btnFour"  android:text="4" style="@style/KeypadButtonStyle"/>
        <Button android:id="@+id/btnSix"   android:text="6" style="@style/KeypadButtonStyle"/>
        <Button android:id="@+id/btnFive"  android:text="5" style="@style/KeypadButtonStyle"/>
        <Button android:id="@+id/btnUndo"  android:text="Undo" style="@style/KeypadButtonStyle.Secondary"/>

        <Button android:id="@+id/btnWide"   android:text="WD" style="@style/KeypadButtonStyle.Extra"/>
        <Button android:id="@+id/btnNoBall" android:text="NB" style="@style/KeypadButtonStyle.Extra"/>
        <Button android:id="@+id/btnBye"    android:text="BYE" style="@style/KeypadButtonStyle.Extra"/>
        <Button android:id="@+id/btnLegBye" android:text="LB" style="@style/KeypadButtonStyle.Extra"/>

        <Button 
            android:id="@+id/btnWicket"
            android:text="WICKET" 
            android:layout_columnSpan="4" 
            android:layout_gravity="fill"
            style="@style/KeypadButtonStyle.Wicket"/>
            
        <Button android:id="@+id/btnRetire" android:text="Retire" style="@style/KeypadButtonStyle.Secondary" android:layout_columnSpan="2" android:layout_gravity="fill"/>
        <Button android:id="@+id/btnSwap"   android:text="Swap"   style="@style/KeypadButtonStyle.Secondary" android:layout_columnSpan="2" android:layout_gravity="fill"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>