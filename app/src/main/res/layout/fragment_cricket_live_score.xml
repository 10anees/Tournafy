<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface"
    tools:context=".ui.fragments.match.cricket.CricketLiveScoreFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tvFragmentTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Live Score"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnShareMatch"
            app:layout_constraintTop_toTopOf="@+id/btnShareMatch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnShareMatch"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShareMatch"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Share Match"
            app:icon="@android:drawable/ic_menu_share"
            app:iconTint="?attr/colorOnSurface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.example.tournafy.ui.components.ScoreboardView
            android:id="@+id/scoreboardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnShareMatch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvThisOver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This Over:"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            app:layout_constraintTop_toBottomOf="@id/scoreboardView"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/llRecentBalls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/tvThisOver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvThisOver"
            app:layout_constraintBottom_toBottomOf="@id/tvThisOver">

            <TextView android:text="." style="@style/BallCircleStyle"/>
            <TextView android:text="1" style="@style/BallCircleStyle"/>
            <TextView android:text="4" style="@style/BallCircleStyle.Boundary"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Match"
            android:layout_marginTop="16dp"
            app:icon="@android:drawable/ic_media_play"
            app:layout_constraintTop_toBottomOf="@id/tvThisOver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <GridLayout
            android:id="@+id/gridKeypad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:columnCount="4"
            android:rowCount="5"
            app:layout_constraintTop_toBottomOf="@id/btnStartMatch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button android:id="@+id/btnZero"  android:text="0" style="@style/KeypadButtonStyle.Secondary"/>
            <Button android:id="@+id/btnOne"   android:text="1" style="@style/KeypadButtonStyle"/>
            <Button android:id="@+id/btnTwo"   android:text="2" style="@style/KeypadButtonStyle"/>
            <Button android:id="@+id/btnThree" android:text="3" style="@style/KeypadButtonStyle"/>

            <Button android:id="@+id/btnFour"  android:text="4" style="@style/KeypadButtonStyle.Extra"/>
            <Button android:id="@+id/btnSix"   android:text="6" style="@style/KeypadButtonStyle.Extra"/>
            <Button android:id="@+id/btnFive"  android:text="5" style="@style/KeypadButtonStyle"/>
            <Button android:id="@+id/btnUndo"  android:text="Undo" style="@style/KeypadButtonStyle.Secondary" android:textColor="?attr/colorError"/>

            <Button android:id="@+id/btnWide"   android:text="WD" style="@style/KeypadButtonStyle.Secondary"/>
            <Button android:id="@+id/btnNoBall" android:text="NB" style="@style/KeypadButtonStyle.Secondary"/>
            <Button android:id="@+id/btnBye"    android:text="BYE" style="@style/KeypadButtonStyle.Secondary"/>
            <Button android:id="@+id/btnLegBye" android:text="LB" style="@style/KeypadButtonStyle.Secondary"/>

            <Button
                android:id="@+id/btnWicket"
                android:text="WICKET"
                android:layout_columnSpan="4"
                android:layout_gravity="fill"
                style="@style/KeypadButtonStyle.Wicket"/>

            <Button android:id="@+id/btnRetire" android:text="Retire" style="@style/KeypadButtonStyle.Secondary" android:layout_columnSpan="2" android:layout_gravity="fill"/>
            <Button android:id="@+id/btnSwap"   android:text="Swap"   style="@style/KeypadButtonStyle.Secondary" android:layout_columnSpan="2" android:layout_gravity="fill"/>

        </GridLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCurrentAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/gridKeypad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStriker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Striker *"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                    <TextView
                        android:id="@+id/tvNonStriker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Non-Striker"
                        android:gravity="center"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                    <TextView
                        android:id="@+id/tvBowler"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bowler"
                        android:gravity="end"
                        android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnChangeStriker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Change Striker"
                        android:textSize="11sp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_marginEnd="4dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnChangeNonStriker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Change Non-Striker"
                        android:textSize="11sp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_marginHorizontal="4dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnChangeBowler"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Change Bowler"
                        android:textSize="11sp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBattingTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/cardCurrentAction">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/headerBattingTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvBattingTeamName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Batting Team"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/tvBattingTeamExpand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▼"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerBattingTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_playing_xi"
                    tools:itemCount="3"
                    tools:visibility="visible" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBowlingTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/cardBattingTeam">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/headerBowlingTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvBowlingTeamName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bowling Team"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorSecondary" />

                    <TextView
                        android:id="@+id/tvBowlingTeamExpand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▼"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerBowlingTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_playing_xi"
                    tools:itemCount="3"
                    tools:visibility="visible" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>