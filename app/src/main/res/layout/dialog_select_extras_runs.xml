<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="?attr/colorSurface">

    <TextView
        android:id="@+id/tvExtrasTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Ball"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvExtrasDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="1 penalty run will be added.\nSelect additional runs scored:"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:gravity="center"/>

    <!-- Grid of run buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRuns0"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:text="0"
            android:textSize="18sp"
            app:cornerRadius="32dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRuns1"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:text="1"
            android:textSize="18sp"
            app:cornerRadius="32dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRuns2"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:text="2"
            android:textSize="18sp"
            app:cornerRadius="32dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRuns3"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:text="3"
            android:textSize="18sp"
            app:cornerRadius="32dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRuns4"
            style="@style/Widget.Material3.Button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:text="4"
            android:textSize="18sp"
            app:cornerRadius="32dp"
            app:backgroundTint="?attr/colorSecondary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRuns5"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:text="5"
            android:textSize="18sp"
            app:cornerRadius="32dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRuns6"
            style="@style/Widget.Material3.Button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:text="6"
            android:textSize="18sp"
            app:cornerRadius="32dp"
            app:backgroundTint="?attr/colorSecondary"/>

    </LinearLayout>

</LinearLayout>
