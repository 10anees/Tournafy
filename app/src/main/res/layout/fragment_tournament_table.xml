<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_background"
            android:alpha="0.3"
            app:tint="?attr/colorOnSurfaceVariant"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tvEmptyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="No standings available yet"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:textAlignment="center"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainContentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupStages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:chipSpacingHorizontal="@dimen/spacing_sm">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGroup"
                    style="@style/Widget.Tournafy.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group Stage"
                    android:checked="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAll"
                    style="@style/Widget.Tournafy.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Teams"/>
            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Tournafy.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?attr/colorSurfaceVariant"
                        android:padding="@dimen/spacing_sm">

                        <TextView
                            android:layout_width="@dimen/scorecard_column_width"
                            android:layout_height="wrap_content"
                            android:text="Pos"
                            android:gravity="center"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Team"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="@dimen/scorecard_column_width"
                            android:layout_height="wrap_content"
                            android:text="P"
                            android:gravity="center"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="@dimen/scorecard_column_width"
                            android:layout_height="wrap_content"
                            android:text="W"
                            android:gravity="center"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="@dimen/scorecard_column_width"
                            android:layout_height="wrap_content"
                            android:text="L"
                            android:gravity="center"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="@dimen/scorecard_column_width"
                            android:layout_height="wrap_content"
                            android:text="NRR"
                            android:gravity="center"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="@dimen/scorecard_column_width"
                            android:layout_height="wrap_content"
                            android:text="Pts"
                            android:gravity="center"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvPointsTable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_tournament_table_row"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLegend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Legend"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@color/success_green"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Qualified for Knockout"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@color/error_red"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eliminated"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="P: Played, W: Won, L: Lost, D: Draw, NRR/GD: Net Run Rate or Goal Difference, Pts: Points"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>