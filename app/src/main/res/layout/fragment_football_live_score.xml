<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- SCOREBOARD -->
        <com.example.tournafy.ui.components.ScoreboardView
            android:id="@+id/scoreboardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- TIMER CONTROLS -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTimerControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/scoreboardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- TOP ROW: Start -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartTimer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Start"
                app:icon="@drawable/ic_launcher_foreground"
                style="@style/Widget.Material3.Button.TonalButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnPauseTimer"
                app:layout_constraintHorizontal_weight="1" />

            <!-- TOP ROW: Pause -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPauseTimer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pause"
                android:layout_marginStart="8dp"
                app:icon="@drawable/ic_launcher_foreground"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:layout_constraintTop_toTopOf="@id/btnStartTimer"
                app:layout_constraintStart_toEndOf="@id/btnStartTimer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1" />

            <!-- BOTTOM ROW: Half Time -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHalfTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Half Time"
                android:layout_marginTop="12dp"
                app:icon="@drawable/ic_launcher_foreground"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:layout_constraintTop_toBottomOf="@id/btnStartTimer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnEndMatch"
                app:layout_constraintHorizontal_weight="1" />

            <!-- BOTTOM ROW: End Match -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEndMatch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="End Match"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/error_red"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:icon="@drawable/ic_launcher_foreground"
                style="@style/Widget.Material3.Button.ElevatedButton"
                app:layout_constraintTop_toBottomOf="@id/btnStartTimer"
                app:layout_constraintStart_toEndOf="@id/btnHalfTime"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- PLAYERS STATUS -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPlayersStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/clTimerControls">

            <!-- (unchanged inner content) -->
            <!-- Keeping your inner LinearLayouts valid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- HEADER -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="?attr/colorSurfaceVariant"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="⚽ Squad Status"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnToggleSquad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:minHeight="0dp"
                        android:paddingVertical="4dp"/>
                </LinearLayout>

                <!-- EXPANDABLE CONTENT -->
                <LinearLayout
                    android:id="@+id/llSquadContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvTeamAName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team A"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTeamAPlayers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:nestedScrollingEnabled="false"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="?attr/colorOutlineVariant"/>

                    <TextView
                        android:id="@+id/tvTeamBName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team B"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTeamBPlayers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:nestedScrollingEnabled="false"/>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- TIMELINE -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTimeline"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_margin="16dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardPlayersStatus">

            <!-- keeping your inner content unchanged -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="?attr/colorPrimaryContainer">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⚽ Match Events Timeline"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:padding="14dp"
                        android:textColor="?attr/colorOnPrimaryContainer"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutlineVariant"
                        android:alpha="0.3"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvEventTimeline"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="8dp"
                    android:clipToPadding="false"/>

                <LinearLayout
                    android:id="@+id/tvEmptyTimeline"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚽"
                        android:textSize="48sp"
                        android:alpha="0.3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No events yet"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start the match and add events!"
                        android:textSize="14sp"
                        android:alpha="0.7"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ACTION GRID -->
        <GridLayout
            android:id="@+id/gridActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:columnCount="2"
            android:rowCount="2"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/cardTimeline"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Keeping your 4 cards unchanged -->
            <!-- Goal, Card, Sub, Undo -->

            <!-- CARD 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGoal"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#E8F5E9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_launcher_foreground"
                        app:tint="#2E7D32"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GOAL"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CARD 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCard"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_launcher_foreground"
                        app:tint="#EF6C00"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CARD"
                        android:textStyle="bold"
                        android:textColor="#EF6C00"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CARD 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSub"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_launcher_foreground"
                        app:tint="#1565C0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUB"
                        android:textStyle="bold"
                        android:textColor="#1565C0"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CARD 4 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUndo"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#F5F5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_launcher_foreground"
                        app:tint="#757575"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UNDO"
                        android:textStyle="bold"
                        android:textColor="#757575"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
