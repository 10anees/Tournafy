<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/materialCardViewOutlinedStyle"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team A (Home)"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorPrimary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTeamAName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Team Name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTeamAName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">
                    
                    <TextView
                        android:id="@+id/tvTeamAPlayersCount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Players: 0"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />
                    
                    <TextView
                        android:id="@+id/tvTeamAStartingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Starting XI: 0"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorPrimary" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | "
                        android:textAppearance="?attr/textAppearanceBodySmall" />
                    
                    <TextView
                        android:id="@+id/tvTeamASubsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subs: 0"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorSecondary" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTeamAPlayers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_player_list" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddPlayerA"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Add Player"
                    app:icon="@drawable/ic_add" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/materialCardViewOutlinedStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team B (Away)"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorSecondary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTeamBName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Team Name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTeamBName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">
                    
                    <TextView
                        android:id="@+id/tvTeamBPlayersCount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Players: 0"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />
                    
                    <TextView
                        android:id="@+id/tvTeamBStartingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Starting XI: 0"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorPrimary" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | "
                        android:textAppearance="?attr/textAppearanceBodySmall" />
                    
                    <TextView
                        android:id="@+id/tvTeamBSubsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subs: 0"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorSecondary" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTeamBPlayers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_player_list" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddPlayerB"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Add Player"
                    app:icon="@drawable/ic_add" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>