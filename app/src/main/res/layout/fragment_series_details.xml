<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md">

        <!-- Series Info Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Tournafy.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <TextView
                    android:id="@+id/tvSeriesName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="India vs Australia Test Series 2023"
                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_md"/>

                <!-- Date Range -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/spacing_xs">

                    <ImageView
                        android:layout_width="@dimen/icon_size_sm"
                        android:layout_height="@dimen/icon_size_sm"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:contentDescription="Date"
                        app:tint="?attr/colorOnSurfaceVariant"/>

                    <TextView
                        android:id="@+id/tvSeriesDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feb 9 - Mar 13, 2023"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginStart="@dimen/spacing_sm"/>
                </LinearLayout>

                <!-- Venue -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/spacing_xs">

                    <ImageView
                        android:layout_width="@dimen/icon_size_sm"
                        android:layout_height="@dimen/icon_size_sm"
                        android:src="@android:drawable/ic_dialog_map"
                        android:contentDescription="Venue"
                        app:tint="?attr/colorOnSurfaceVariant"/>

                    <TextView
                        android:id="@+id/tvSeriesVenue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="India"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginStart="@dimen/spacing_sm"/>
                </LinearLayout>

                <!-- Sport Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/spacing_xs">

                    <ImageView
                        android:layout_width="@dimen/icon_size_sm"
                        android:layout_height="@dimen/icon_size_sm"
                        android:src="@android:drawable/ic_menu_compass"
                        android:contentDescription="Sport"
                        app:tint="?attr/colorOnSurfaceVariant"/>

                    <TextView
                        android:id="@+id/tvSportType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cricket - Test"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginStart="@dimen/spacing_sm"/>
                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4-match Test series between India and Australia"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:visibility="gone"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Series Status -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Tournafy.Card.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Series Status"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_md"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Team A -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <include
                            layout="@layout/component_team_badge"
                            android:id="@+id/badgeTeamA"
                            android:layout_width="@dimen/avatar_size_lg"
                            android:layout_height="@dimen/avatar_size_lg"/>

                        <TextView
                            android:id="@+id/tvTeamAName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="India"
                            android:textAppearance="?attr/textAppearanceTitleSmall"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginTop="@dimen/spacing_sm"/>

                        <TextView
                            android:id="@+id/tvTeamAWins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 Wins"
                            android:textAppearance="?attr/textAppearanceHeadlineMedium"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/spacing_xs"/>
                    </LinearLayout>

                    <!-- Separator -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textAppearance="?attr/textAppearanceHeadlineLarge"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:paddingHorizontal="@dimen/spacing_lg"/>

                    <!-- Team B -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <include
                            layout="@layout/component_team_badge"
                            android:id="@+id/badgeTeamB"
                            android:layout_width="@dimen/avatar_size_lg"
                            android:layout_height="@dimen/avatar_size_lg"/>

                        <TextView
                            android:id="@+id/tvTeamBName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Australia"
                            android:textAppearance="?attr/textAppearanceTitleSmall"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginTop="@dimen/spacing_sm"/>

                        <TextView
                            android:id="@+id/tvTeamBWins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 Win"
                            android:textAppearance="?attr/textAppearanceHeadlineMedium"
                            android:textColor="?attr/colorSecondary"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/spacing_xs"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Draws -->
                <TextView
                    android:id="@+id/tvDraws"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Draw"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_md"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Matches List -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Tournafy.Card.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Matches"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_sm"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMatches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
